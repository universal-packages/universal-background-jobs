{
  "name": "@universal-packages/background-jobs",
  "version": "1.1.0",
  "description": "Background jobs based on job interfaces and worker",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git://git@github.com/universal-packages/universal-background-jobs.git",
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:full": "jest --coverage --verbose",
    "test:clear": "jest --clearCache"
  },
  "dependencies": {
    "@universal-packages/module-loader": "^1.0.0",
    "@universal-packages/redis-queue": "^1.0.0",
    "@universal-packages/time-measurer": "^1.3.0",
    "cron": "^2.1.0"
  },
  "peerDependencies": {
    "redis": "^4.3.0"
  },
  "devDependencies": {
    "@types/cron": "^2.0.0",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.39",
    "@types/uuid": "^8.3.4",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/tests/.*\\.test\\.ts?)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/tmp"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none"
  }
}
